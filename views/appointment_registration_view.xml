<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="appointment_option_search">
            <field name="model">s2u.appointment.registration</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="descripcion"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="appointment_option_form_view">
            <field name="model">s2u.appointment.registration</field>
            <field name="arch" type="xml">
                <div>
                    <group>
                        <button class="btn btn-danger" type="object" name="cancel_appointment" string="Cancelar"/>
                    </group>
                    <group>
                        <button class="btn btn-success" type="object" name="confirm_appointment" string="Confirmar Pago"/>
                    </group>
                </div>
                <form string="Registros">
                    <sheet>
                        <group string="Datos de paciente">
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="descripcion"/>
                                <field name="enfermedades"/>
                                <field name="cirugias"/>
                            </group>
                        </group>
                        <group string="Datos tecnicos pago">
                            <field name="event_id"/>
                            <field name="orden"/>
                            <field name="factura"/>
                        </group>
                        <group string="Datos doctor">
                            <field name="appointee_id"/>
                            <field name="appointment_begin"/>
                            <field name="appointment_end"/>
                            <field name="appointee_interaction"/>
                            <field name="diagnostico"/>
                            <field name="medicacion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="appointment_option_tree_view">
            <field name="model">s2u.appointment.registration</field>
            <field name="arch" type="xml">
                <tree string="Appointment registros">
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="appointment_reg_action">
            <field name="name">Appointment Registros</field>
            <field name="res_model">s2u.appointment.registration</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Appointment Registros" id="menu_appointment_reg"
                  parent="menu_appointment"  action="appointment_reg_action" sequence="30"/>

    </data>
</odoo>
